<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/colorWhite"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bottom_border">
        <com.pushu_tech.sumpay.views.IconView
            android:id="@+id/closeIconView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="32dp"
            />
        <TextView
            android:layout_marginLeft="-50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Pay Result"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/payAmountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Success!"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textSize="48dp"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bottom_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reciept"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/payUnitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- S$"/>
            <TextView
                android:id="@+id/payAmountConfirmTextView"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rewardLayout"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_border">
            <TextView
                android:id="@+id/rewardNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/rewardKeyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorShopBuy"
                android:text="+ SAGE"/>
            <TextView
                android:id="@+id/rewardValueTextView"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorShopBuy"
                android:text="1.0"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/doneButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shap_corner_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Done"/>
</LinearLayout>
