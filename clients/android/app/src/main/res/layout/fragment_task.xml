                                android:layout_height="25dp"
                                android:text="+ 65"
                                android:textColor="@color/colorPrimary"

                                android:textSize="18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:text="SAGE"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.constraint.Guideline
                            android:id="@+id/guideline1"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.3333333333" />
                        <android.support.constraint.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.6666666666" />

                        <ImageView
                            android:id="@+id/hbc_image1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/hbcad01"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/guideline1" />

                        <ImageView
                            android:id="@+id/hbc_image2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:src="@drawable/hbcad02"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintLeft_toRightOf="@id/guideline1"
                            app:layout_constraintRight_toLeftOf="@id/guideline2" />

                        <ImageView
                            android:id="@+id/hbc_image3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/hbcad03"
                            app:layout_constraintDimensionRatio="h,1:1"
                            app:layout_constraintLeft_toRightOf="@id/guideline2"
                            app:layout_constraintRight_toRightOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QA for ECard used in blockchain " />

                    <LinearLayout
                        android:id="@+id/tesla_not_interesting2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:clickable="true"
                        android:paddingBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_border"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="X"
                            android:textSize="10dp" /></LinearLayout>
                </RelativeLayout>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/surveyDone"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/round_border_with_shadow_mask"></LinearLayout>
            </android.support.constraint.ConstraintLayout>


            <LinearLayout
