                            android:background="@drawable/round_border"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="X"
                            android:textSize="10dp" /></LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

