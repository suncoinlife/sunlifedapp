<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <!--<android.support.design.widget.AppBarLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="65dp">-->
    <!--</android.support.design.widget.AppBarLayout>-->
    <LinearLayout
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <com.pushu_tech.sumpay.views.IconView
            android:id="@+id/scanIconView"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bars"
            android:textColor="@color/colorDark"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:background="@drawable/shap_corner_white">
            <com.pushu_tech.sumpay.views.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:text="search"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorContent"
                android:textSize="18dp"
                android:text="大家都在搜 “附近美食”"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_marginTop="84dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ad01"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/gift_page_food"/>
                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="15dp"
                            android:text="更多"/>
                        <ImageView

                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/more"/>
                    </LinearLayout>
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_food1"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_food2"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_food3"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_food4"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:text="咖啡"/>
                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="15dp"
                            android:text="更多"/>
                        <ImageView

                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/more"/>
                    </LinearLayout>
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_coffee1"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_coffee2"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_coffee3"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_coffee4"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:text="汽车"/>
                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="15dp"
                            android:text="更多"/>
                        <ImageView

                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/more"/>
                    </LinearLayout>
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_car1"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_car2"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_car3"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:id="@+id/shop_car4"
                                android:orientation="vertical"
                                android:background="@drawable/round_border_with_shadow"
                                ></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>